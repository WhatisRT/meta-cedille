--------------------------------------------------------------------------------
-- Map strings to some values
--------------------------------------------------------------------------------

module Map (V : *).

importModule Maybe.
Given String.
Given stringEq.
Given ifthenelse.

let Map := String -> Maybe V.

let lookup (k : String) (m : Map V) : Maybe V := m k.
let insert (m : Map V) (k : String) (v : V) : Map V :=
  Î» s : String. ifthenelse ?(Maybe V) (stringEq s k) (just V v) (m s).

endModule.