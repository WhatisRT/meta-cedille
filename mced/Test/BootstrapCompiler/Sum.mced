module Sum.

elet Sum (A, B : *) : * := ∀ X : *. (A -> X) -> (B -> X) -> X.

elet inl [A, B : *] (a : A) : Sum A B := Λ X : *. λ l : A -> X. λ r : B -> X. l a.
elet inr [A, B : *] (b : B) : Sum A B := Λ X : *. λ l : A -> X. λ r : B -> X. r b.

elet recursionSum [A, B, X : *] (l : A -> X) (r : B -> X) (x : Sum A B) : X := x ?X l r.

endModule.
